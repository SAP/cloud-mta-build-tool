{
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "instanceid": { "type": "string", "minLength": 1 },
    "uaa": {
      "type": "object",
      "properties": {
        "clientid": {
          "type": "string",
          "minLength": 1
        },
        "clientsecret": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "format": "absolute-uri"
        }
      },
      "required": ["clientid", "clientsecret", "url"]
    },
    "grant_type": {"type": "string", "enum": ["client_credentials"]},
    "uri": { "type": "string", "minLength": 1, "format": "absolute-uri" }
  },
  "required": ["uri","grant_type"]
}
