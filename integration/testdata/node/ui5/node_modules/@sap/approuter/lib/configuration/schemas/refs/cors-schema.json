{
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "uriPattern": { "$ref": "sourceSchema" },
      "allowedOrigin": { "format": "validateWhitelist" },
      "allowedMethods": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "enum": ["DELETE", "GET", "HEAD", "OPTIONS", "POST", "PUT", "TRACE", "PATCH"]
        }
      },
      "allowedHeaders": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "allowedCredentials": { "type": "boolean" },
      "exposeHeaders": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "maxAge": { "type": "integer", "minimum": 1 }
    },
    "required": ["allowedOrigin", "uriPattern"]
  }
}
